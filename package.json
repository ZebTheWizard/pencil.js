{
    "private": true,
    "name": "pencil.js",
    "version": "3.0.2",
    "description": "Nice modular interactive 2D drawing library.",
    "main": "src/index.js",
    "type": "module",
    "files": [
        "dist",
        "src",
        "!src/**/*.test.js"
    ],
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "unpkg": "dist/pencil.min.js",
    "jsdelivr": "dist/pencil.min.js",
    "scripts": {
        "lint": "eslint src/",
        "test": "c8 --reporter=html --reporter=text-summary ava",
        "testci": "c8 --reporter=lcovonly --reporter=text-summary ava",
        "play": "webpack --mode=development --watch",
        "build": "webpack --mode=production && tsc",
        "contrib": "all-contributors generate",
        "docs": "jsdoc -c .jsdocrc",
        "prepublishOnly": "npm run build",
        "postversion": "vercel --prod"
    },
    "ava": {
        "require": [
            "@pencil.js/test-environment"
        ],
        "timeout": "2m"
    },
    "eslintConfig": {
        "extends": "@gmartigny/eslint-config",
        "parserOptions": {
            "ecmaVersion": "latest"
        },
        "rules": {
            "import/no-extraneous-dependencies": 0
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pencil-js/pencil.js.git"
    },
    "keywords": [
        "canvas",
        "HTML",
        "drawing",
        "renderer",
        "engine",
        "frontend",
        "web",
        "modular",
        "OOP",
        "toolbelt"
    ],
    "author": "Guillaume Martigny <guillaume.martigny@gmail.com> (https://www.guillaume-martigny.fr)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/pencil-js/pencil.js/issues"
    },
    "homepage": "https://pencil.js.org/",
    "funding": {
        "url": "https://github.com/pencil-js/pencil.js?sponsor=1"
    },
    "workspaces": [
        "src/modules/arc",
        "src/modules/base-event",
        "src/modules/button",
        "src/modules/checkbox",
        "src/modules/circle",
        "src/modules/color",
        "src/modules/component",
        "src/modules/conic-gradient",
        "src/modules/container",
        "src/modules/draggable",
        "src/modules/ellipse",
        "src/modules/event-emitter",
        "src/modules/heart",
        "src/modules/image",
        "src/modules/input",
        "src/modules/keyboard-event",
        "src/modules/knob",
        "src/modules/line",
        "src/modules/linear-gradient",
        "src/modules/math",
        "src/modules/mouse-event",
        "src/modules/navigation",
        "src/modules/network-event",
        "src/modules/offscreen-canvas",
        "src/modules/particles",
        "src/modules/path",
        "src/modules/pattern",
        "src/modules/pie",
        "src/modules/polygon",
        "src/modules/position",
        "src/modules/progress-bar",
        "src/modules/progress-pie",
        "src/modules/radial-gradient",
        "src/modules/rectangle",
        "src/modules/regular-polygon",
        "src/modules/resizable",
        "src/modules/rotatable",
        "src/modules/scene",
        "src/modules/select",
        "src/modules/slider",
        "src/modules/spline",
        "src/modules/sprite",
        "src/modules/square",
        "src/modules/star",
        "src/modules/text",
        "src/modules/triangle",
        "src/modules/vector"
    ],
    "dependencies": {
        "colord": "^2.9.3",
        "minimatch": "^5.1.6",
        "text-direction": "^2.0.1"
    },
    "devDependencies": {
        "@babel/plugin-syntax-import-assertions": "^7.22.5",
        "@babel/preset-env": "^7.22.15",
        "@gmartigny/eslint-config": "^2.1.0",
        "@pencil.js/test-environment": "^1.2.1",
        "all-contributors-cli": "^6.26.1",
        "ava": "^5.3.1",
        "benchmark": "^2.1.4",
        "c8": "^8.0.1",
        "clean-jsdoc-theme": "^4.2.12",
        "eslint": "^8.49.0",
        "jsdoc": "^4.0.2",
        "jsdoc-babel": "^0.5.0",
        "typescript": "^5.2.2",
        "webpack": "^5.53.0",
        "webpack-cli": "^5.1.4"
    }
}
